page {
  background-color: #fff;
}

.musics {
  padding-left: 40rpx;
}

.music-item {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 80rpx;
  border-bottom: 2rpx solid #eee;
  padding: 24rpx 0;
}

.music-cover {
  width: 80rpx;
}
.music-cover-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.music-data {
  flex: 1;
  margin-left: 30rpx;
}
.music-title {
  color: #333;
}
.music-author {
  font-size: 24rpx;
}