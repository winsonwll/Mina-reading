<view class="music-story">
    <view class="music-content-header">
        <view class="content-label">
            <text>音乐故事</text>
        </view>
        <view class="content-links" data-id="{{item.id}}" bindtap="switchContent">
            <image class="link" src="/images/icon/music_story_active.png" mode="aspectFill"></image>
            <image class="link" src="/images/icon/music_lyric.png" mode="aspectFill" data-type="lyric"></image>
            <image class="link" src="/images/icon/music_about.png" mode="aspectFill" data-type="about"></image>
        </view>
    </view>

    <view class="music-content-body">
        <view class="story-title">
            <text>{{item.story_title}}</text>
        </view>
        <view class="story-author">
            <text>{{item.story_author.user_name}}</text>
        </view>
        <view class="story-content">
            <text>{{item.story}}</text>
        </view>
    </view>
</view>