@import "../../components/toast/toast.wxss";
@import "../../components/toptip/toptip.wxss";
@import "../../components/dialog/dialog.wxss";

.container {
    min-height: 100%;
    height: auto;
}

.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 50rpx 0;
    background-color: #405f80;
}
.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}
.userinfo-nickname {
    color: #fff;
}

.logout {
    border-top: 2rpx solid #e5e5e5;
    border-bottom: 2rpx solid #e5e5e5;
    margin-top: 20rpx;
    background-color: #fff;
    padding: 24rpx 30rpx;
    text-align: center;
}
.contact {
    padding: 24rpx 30rpx;
}

.intro {
    padding: 40rpx;
    height: 100%;
    text-align: center;
    color: #666;
    font-size: 28rpx;
}
.intro-logo {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 20rpx;
}
.intro-content {
    text-align: left;
}