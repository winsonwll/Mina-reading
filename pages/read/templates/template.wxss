.article-item {
  padding: 30rpx 0;
  border-bottom: 2rpx solid #eee;
}

.article-item:last-child {
  border-bottom: none;
}

.article-header {
  margin-bottom: 20rpx;
}

.article-title {
  width: 80%;
  display: inline-block;
  font-size: 32rpx;
  color: #333;
}

.article-type {
  float: right;
  font-size: 20rpx;
  padding: 10rpx 10rpx 10rpx 16rpx;
  color: #89bdf7;
  border: 2rpx solid #89bdf7;
  border-radius: 10rpx;
  letter-spacing: 6rpx;
}
.article-author {
  color: #999;
}

.wrap {
  padding: 30rpx;
}

.author-date {
  flex-direction: row;
  margin-bottom: 20rpx;
}
.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.author {
  font-size: 30rpx;
  margin-left: 20rpx;
}
.const-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}
.date {
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999;
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  letter-spacing: 2rpx;
  color: #4b556c;
}

.tool {
  margin: 20rpx 0;
  height: 90rpx;
}

.circle-img {
  float: right;
  vertical-align: middle;
}

.audio-img {
  width: 90rpx;
  height: 90rpx;
}
.share-img {
  float: right;
  width: 90rpx;
  height: 90rpx;
  margin-left: 30rpx;
  padding: 0;
  background: url(data:image/png;base64,) no-repeat;
  background-size: cover;
}
.share-img:after {
  display: none;
}

.horizon {
  width: 100%;
  height: 2rpx;
  background-color: #eee;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  z-index: -99;
}

.content {
  letter-spacing: 2rpx;
}

.charge-edt {
  margin-top: 40rpx;
  color: #999;
  font-size: 24rpx;
}