@import "item/item-template.wxss";

.search {
  width: 100%;
  height: 64rpx;
  background-color: #405F80;
  padding: 15rpx 0;
  color: #666;
  font-size: 28rpx;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}
.search-container {
  height: 64rpx;
  width: 95%;
  display: flex;
  flex-direction: row;
  background: #fff;
  border-radius: 60rpx;
  margin: 0 auto;
}
.search-icon {
  margin: auto 0 auto 20rpx;
}
.search input {
  height: 100%;
  width: 585rpx;
  margin-left: 20rpx;
}
.placeholder {
  font-size: 28rpx;
  color: #d1d1d1;
  margin-left: 10rpx;
}
.clear-icon {
    margin: auto 0 auto 6rpx;
}

.fix-fixed {
  width: 100%;
  height: 94rpx;
}

.generes-list {
  height: 84rpx;
  border-bottom: 2rpx solid #eee;
  white-space: nowrap;
  background-color: #fff;
}
.genere-item {
  display: inline-block;
  width: 160rpx;
  height: 80rpx;
  text-align: center;
  border-bottom: 4rpx solid #fff;
  font-size: 32rpx;
  line-height: 84rpx;
}
.generes-list .cur {
  color: #E0763D;
  border-bottom: 4rpx solid #E0763D;
}

.grid-container{
    margin: 0 0 40rpx 0;
    height: 100%;
}
.books-swiper {
  width:100%;
}

.search-panel {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 92rpx;
  color: #666;
  font-size: 28rpx;
  background-color: #fff;
}
.search-default {
  padding: 30rpx 40rpx;
}
.search-default-head {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.search-title {
  font-size: 32rpx;
  color: #333;
}
.search-keyword {
  display: inline-block;
  padding: 0 20rpx;
  height: 56rpx;
  line-height: 56rpx;
  border: 2rpx solid #eee;
  border-radius: 10rpx;
  margin: 0 20rpx 20rpx 0;
}
.search-history {
  margin-top: 20rpx;
}
.search-remove-icon {
  width: 28rpx;
  height: 28rpx;
}

.search-result {
  padding-left: 40rpx;
  height: 100%;
}
.search-list {
  padding: 20rpx 0;
  border-bottom: 2rpx solid #eee;

}
.search-list .title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}