@import "../../../components/stars/stars-template.wxss";
@import "../../wxParse/wxParse.wxss";

.container {
    min-height: 100%;
    height: auto;
}

.cover-img {
    width: 100%;
    height: 320rpx;
    -webkit-filter: blur(20px);
}

.head-content {
    width: 100%;
    height: 320rpx;
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: column;
}

.main-title {
    font-size: 40rpx;
    color: #fff;
    font-weight: bold;
    margin-top: 50rpx;
    margin-left: 40rpx;
    letter-spacing: 4rpx;
    text-shadow: 2rpx 2rpx rgba(0,0,0,.4);
}

.sub-title {
    font-size: 28rpx;
    color: #fff;
    margin-left: 40rpx;
    margin-top: 30rpx;
}

.like {
    margin-top: 30rpx;
    margin-left: 40rpx;
}

.highlight-font {
    color: #f21146;
    font-size: 22rpx;
    margin-right: 10rpx;
}

.plain-font {
    color: #666;
    font-size: 22rpx;
    margin-right: 30rpx;
}

.book-cover-img {
    height: 238rpx;
    width: 175rpx;
    position: absolute;
    top: 160rpx;
    right: 30rpx;
}

.summary {
    margin-left: 40rpx;
    margin-top: 30rpx;
}

.original-title {
    color: #4b556c;
    font-weight: bold;
    margin-bottom: 40rpx;
}

.flex-row {
    display: flex;
    flex-direction: row;
    margin-bottom: 10rpx;
}

.mark {
    margin-right: 30rpx;
    white-space:nowrap;
    color: #999;
}

.tool {
  margin-top: 20rpx;
}

.share-img {
  float: right;
  width: 90rpx;
  height: 90rpx;
  margin-right: 30rpx;
  padding: 0;
  background: url(data:image/png;base64,) no-repeat;
  background-size: cover;
}
.share-img:after {
  display: none;
}

.horizon {
  width: 680rpx;
  height: 2rpx;
  background-color: #eee;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}

.synopsis {
    padding: 0 40rpx;
}
.synopsis-font, .recommend-font {
    color:#999;
    margin-bottom: 20rpx;
}
.summary-content {
    letter-spacing: 2rpx;
    font-size: 32rpx;
}

.recommend {
    padding: 20rpx 0;
    border-top: 2rpx solid #eee;
    margin: 50rpx 40rpx 0 40rpx;
}

.recommend-container {
    display: inline-flex;
    flex-direction: column;
    margin-right: 40rpx;
    width: 170rpx;
    text-align:center;
    white-space: normal;
}

.recommend-imgs {
    width: 106%;
    white-space: nowrap;
}
.recommend-img {
    width: 170rpx;
    height: 210rpx;
}
.recommend-name {
    margin: 10rpx auto 0;
}

.blank140 {
    width: 100%;
    height: 140rpx;
}
.bottombar {
  width: 100%;
  height: 96rpx;
  border-top: 2rpx solid #eee;
  background: #fff;
  color: #666;
  font-size: 28rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.bot-l, .bot-r {
  display: flex;
  flex-direction: row;
}
.bot-l {
  padding-left: 20rpx;
}
.bot-r {
  padding-right: 20rpx;
}
.botitem {
  display: flex;
  flex-direction: column;
  text-align: center;
  width: 90rpx;
}
.bot-l .botitem {
  margin-right: 10rpx;
}
.bot-r .botitem {
  margin-left: 10rpx;
}
.boticon {
  width: 42rpx;
  height: 42rpx;
  display: block;
  margin: 0 auto;
}
.bottxt {
  white-space:nowrap;
  color: #405F80;
}


/*爱心动画*/
.myCanvas{
    background-color: transparent;
    width: 90px;
    height:400px;
}

.v-canvas{
    position: fixed;
    right: 20px;
    bottom: 60px;
    width: 90px;
    background-color: transparent;
}
.bt-img{
    width: 40px;
    height: 40px;
    transform: scale(1);
    -webkit-transform: scale(1);
    -webkit-transition:ease all;
    -moz-transition:ease all;
    transition:ease all;
    -webkit-transition-duration:700ms;
    -moz-transition-duration:700ms;
    transition-duration:700ms;
}
.btn-invite {
  width: 80%;
  height: 96rpx;
  background: #405F80;
  color: #fff;
  font-size: 32rpx;
  line-height: 96rpx;
  text-align: center;
  margin: 30rpx auto 0 auto;
  border-radius: 96rpx;
}
.btn-invite .bookicon {
    width: 69rpx;
    height: 42rpx;
    vertical-align: -10rpx;
}


.btn-more {
  bottom: 130rpx;
}


.dialog-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 2000;
    background: rgba(0, 0, 0, 0.7);
    display: none;
}
.dialog-container {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 650rpx;
    transform: translateY(150%);
    transition: all 0.4s ease;
    z-index: 2001;
}
.dialog-wrap {
  padding: 50rpx;
}
.shareTimeline-img {
  width: 100%;
  height: 366rpx
}
.shareTimeline-tips {
  display: block;
  color: #fff;
  text-align: center;
  padding: 20rpx 0;
  font-size: 26rpx;
}
.shareTimeline-btn {
  width: 50%;
  height: 76rpx;
  line-height: 76rpx;
  margin: 0 auto;
  font-size: 32rpx;
}
.dialog-show .dialog-container {
    transform: translateY(-50%);
}
.dialog-show .dialog-mask {
    display: block;
}