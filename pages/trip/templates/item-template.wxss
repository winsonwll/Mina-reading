.trip-item {
    overflow: hidden;
    position: relative;
    border-radius: 8rpx;
    margin: 20rpx;
}
.trip-item::before {
    content: '';
    display: block;
    position: absolute;
    left: 0;
    top: 0;
    width: 560rpx;
    height: 100%;
    border-top-left-radius: 8rpx;
    border-bottom-left-radius: 8rpx;
    background: linear-gradient(to right, rgba(0, 0, 0, .6) 0, rgba(0, 0, 0, 0) 100%);
}

.cover {
    width: 100%;
    height: 352rpx;
    vertical-align: bottom;
}

.info {
    color: #fff;
    padding: 30rpx 30rpx 0 30rpx;
    position: absolute;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    z-index: 1;
    box-sizing: border-box;
}

.title {
    font-size: 36rpx;
    font-weight: 700;
    text-shadow: 2rpx 2rpx rgba(0, 0, 0, .4);
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    display: -webkit-box;
    -webkit-box-orient: vertical;
}

.detail {
    margin-top: 15rpx;
    padding-left: 18rpx;
    position: relative;
    font-size: 22rpx;
    line-height: 1;
    text-shadow: 2rpx 4rpx 0px rgba(0, 0, 0, 0.20);
}
.detail text {
    margin-right: 20rpx;
}
.place {
    margin-top: 6rpx;
    font-size: 22rpx;
}
.detail::before {
    content: '';
    width: 6rpx;
    height: 100%;
    border-right: 1rpx;
    background-color: #4ABDCC;
    position: absolute;
    left: 4rpx;
    top: 2rpx;
}

.user {
    position: absolute;
    width: 100%;
    left: 30rpx;
    bottom: 30rpx;
    line-height: 50rpx;
    font-size: 24rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
}
.avatar {
    width: 50rpx;
    height: 50rpx;
    margin-right: 15rpx;
    border-radius: 50%;
}

.bottom{
    position: absolute;
    bottom: 24rpx;
    font-size: 24rpx;
}