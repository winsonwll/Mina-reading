@import "../templates/waypoint-template.wxss";

page {
    background-color: #fbf7ed;
}

.trip {
    padding: 40rpx 30rpx 0;
}

.trip-top {
    overflow: hidden;
}

.trip-avatar {
    float: left;
    width: 72rpx;
    height: 72rpx;
    border-radius: 50%;
    margin-right: 20rpx;
}

.trip-info {
    max-width: 100%;
}

.trip-info .title {
    font-size: 40rpx;
    color: #4b556c;
    font-weight: 600;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    margin-bottom: 10rpx;
    line-height: 1.1;
}

.trip-info .detail {
    color: #999;
    font-size: 24rpx;
}

.trip-info .detail text {
    padding-right: 20rpx;
}

.trip-wps {
    margin-top: 36rpx;
}

.wp-sep {
    width: 8rpx;
    height: 36rpx;
    margin-left: 20rpx;
    background: #e7ddc6;
}

.day-marker {
    display: flex;
    flex-direction: row;
    color: #a8915e;
    font-weight: bold;
    line-height: 32rpx;
    height: 32rpx;
}

.circle {
    width: 16rpx;
    height: 16rpx;
    background-color: #fff;
    border-radius: 50%;
    border: 8rpx solid #e7ddc6;
    margin: 0 8rpx;
    vertical-align: text-bottom;
}