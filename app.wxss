page {
  height: 100%;
  line-height: 1.5;
  background-color: #fbf7ed;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  color: #666;
  font-size: 28rpx;
}

.panel {
  background: #fff;
  border-top: 2rpx solid #e5e5e5;
  border-bottom: 2rpx solid #e5e5e5;
  margin-top: 20rpx;
}
.panel-without-margin-top {
  margin-top: 0;
}
.cell {
  position: relative;
  padding: 24rpx 30rpx;
  display: flex;
  align-items: center;
  line-height: 1.4;
  font-size: 28rpx;
}
.cell::after {
  position: absolute;
  left: 30rpx;
  right: 0;
  bottom: 0;
  border-top: 2rpx solid #e5e5e5;
  background: #e5e5e5;
  content: ' ';
}
.cell-bd {
  flex: 1;
  color: #333;
}
.cell-ft {
  position: relative;
  text-align: right;
  color: #666;
}
.cell:last-child::after {
  display: none;
}
.cell-access .cell-ft {
  padding-right: 26rpx;
}
.cell-access .cell-ft::after {
  position: absolute;
  top: 50%;
  right: 4rpx;
  content: " ";
  display: inline-block;
  height: 12rpx;
  width: 12rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #c8c8c8;
  border-style: solid;
  transform: translateY(-50%) matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
}
.cell-has {
  width: 16rpx;
  height: 16rpx;
  background-color: #DC5C51;
  border-radius: 50%;
}


.btn-more, .btn-shareTimeline {
  width: 88rpx;
  height: 88rpx;
  position: fixed;
  bottom: 20rpx;
  z-index: 1000;
}

.btn-more {
  right: 20rpx;
}

.btn-shareTimeline {
  left: 20rpx;
}

.btn-more .homeicon, .btn-shareTimeline .timelineicon {
  width: 88rpx;
  height: 88rpx;
}